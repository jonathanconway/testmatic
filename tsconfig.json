{
  "compilerOptions": {
    "sourceRoot": "src",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "target": "es2021",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2021"],
    "module": "esnext"
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "noUnusedLocals": false
    }
  }
}
